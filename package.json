{
  "name": "local-dependency-forwarder",
  "displayName": "Local Dependency Forwarder",
  "description": "Forward all dependencies, so we can develop locally",
  "version": "0.0.7",
  "publisher": "Ruibin",
    "repository": {
    "type": "git",
    "url": "git+https://github.com/DevRuibin/local-dependency-forwarder.git"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "local-dependency-forwarder.openPanel",
        "title": "Local Dependency Forwarder: Open Panel"
      },
      {
        "command": "local-dependency-forwarder.stopAll",
        "title": "Local Dependency Forwarder: Stop All"
      },
      {
        "command": "local-dependency-forwarder.resetOrphans",
        "title": "Local Dependency Forwarder: Reset (Kill Orphaned Listeners)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
